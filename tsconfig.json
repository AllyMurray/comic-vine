{
  "exclude": ["node_modules", "dist", "src/index.cjs.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "target": "esnext",
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
